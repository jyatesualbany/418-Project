<h2>Tests</h2>
@{
    ViewData["Title"] = "Choose a Test";
}

@using _418FinalProject.Models;
@model testTitlesModel;
<style>
    .admin {
        display: inline-block;
        padding: 5px 50px 5px 50px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<div style="text-align: center">
    <a class="admin"><h2>Choose a test to take:</h2></a>
</div>

<table class="table" style="text-align: center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tests[0].Test_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tests[0].Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tests)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Test_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Select" asp-route-id="@item.Test_ID">Select</a> |
                <a asp-action="Results" asp-route-id="@item.Test_ID">Result</a>
            </td>
        </tr>
        }
    </tbody>
</table>
