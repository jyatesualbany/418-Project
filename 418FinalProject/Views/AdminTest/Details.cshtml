@{
    ViewData["Title"] = "Test Details";
    string q_id = ViewData["Debugging"] as String;
}
@using _418FinalProject.Models;
@model Test;

<h1>Details</h1>

<div>
    <h4>Test </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestTitle)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(q => Model.SelectQuestions.First().QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(q => Model.SelectQuestions.First().Category)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SelectQuestions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(q => item.QuestionText)
                </td>
                <td>
                    @Html.DisplayFor(q => item.Category)
                </td>
            </tr>
        }
    </tbody>
</table>
<p>@q_id</p>
<div>
    <a asp-action="EditQuestion" asp-route-id="@Model.TestID">Edit</a> |
    <a asp-action="DeleteQuestion" asp-route-id="@Model.TestID">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>