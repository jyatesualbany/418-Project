@* Question Index View *@
@using _418FinalProject.Models;
@model IEnumerable<Question>;
@{
    ViewData["Title"] = "Questons";
}


<form method="post" enctype="multipart/form-data" asp-controller="Questions" asp-action="UploadFile">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload">
        </div>
    </div>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer1Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer2Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer3Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer4Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer1Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer2Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer3Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer4Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.QuestionID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.QuestionID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.QuestionID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>